@{
    ViewData["Title"] = "Index";
    var user = ViewData["User"] as User;
    var posts = ViewData["Posts"] as List<Post>;
    Layout = "~/Views/Shared/_Layout.cshtml";
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkedHU_CENG</title>
    <link rel="stylesheet" href="~/css/superhero-bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PostgreSQL.styles.css" asp-append-version="true" />
</head>



<div class="container"  style="margin-top: 64px;">
    <div class="main-body"  style="margin-top: 64px;">
        <div class="row ">

            <div class="col">
                <div class="card-profile">
                    <div class="card">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (user.ProfilePicturePath == null)
                            {
                                <img src="https://static.thenounproject.com/png/2518416-200.png" alt="Admin" class="rounded-circle" width="150">
                            }
                            else
                            {
                                <img src="~/profilePictures/@user.ProfilePicturePath" alt="Admin" class="rounded-circle" height="150" width="150">
                            }
                            @*<img src="~/images/@user.ProfilePicturePath"  class="rounded-circle"height="40" width="40" asp-append-version="true" />  *@
                            <div class="mt-3">
                                <h4>@user.Name @user.Surname</h4>
                                @if (user.Title == null)
                                {
                                    <p class="text-secondary mb-1"></p>
                                }
                                else
                                {
                                    <p class="text-secondary mb-1">@user.Title</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 align="center" ; class="align-items-center mb-3">Personal Information</h6>
                                <div class="card-aboutme col">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Phone Number</h6>
                                            <h6 class="text-secondary h6-custom">@user.PhoneNum</h6>
                                        </li>
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Email Address</h6>
                                            <h6 class="text-secondary h6-custom">@user.Email</h6>
                                        </li>
                                        @if (@user.Location == null)
                                        {
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0">Location</h6>
                                                <h6 class="text-secondary h6-custom">You can add your location information.</h6>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0">Location</h6>
                                                <h6 class="text-secondary h6-custom">@user.Location</h6>
                                            </li>
                                        }
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Birth Date</h6>
                                            <h6 class="text-secondary h6-custom">@user.BirthDate</h6>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                @if (@user.About == null)
                                {
                                    <h6 align="center" ; class="align-items-center mb-3">About Me</h6>
                                    <div class="card-aboutme col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0 h6-custom">You can write about your years of experience, industry, or skills. People also talk about their achievements or previous job experiences.</h6>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <h6 align="center" ; class="align-items-center mb-3">About Me</h6>
                                    <div class="card-aboutme col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0 h6-custom">@user.About</h6>
                                            </li>
                                        </ul>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col mt-3">
                <div class="card mb-3">
                    <div class="card-body">
                        <div style="display:block; width:100%;">



                            <table class="table table-bordered table-striped" style="width:100%">


                                @foreach (var obj in posts)
                                {


                                    <div class="card">
                                        <div class="custom-margin1">

                                            <div id="wrapperDiv">
                                                <div id="div3" style="padding:5px;;float:right;color:#ffffff"> <a href=#><i class="bi bi-chat-right-text"></i></a> </div>
                                                <div id="div2" style="padding:5px;float:right;color:#ffffff">
                                                    <button onclick="copyText()"> <i class="bi bi-share"></i></button>
                                                    <script>
                                                        function copyText() {
                                                            navigator.clipboard.writeText
                                                                ("https://localhost:7263/Post/ViewPost/" + @obj.PostId );
                                                        }
                                                    </script>
                                                </div>
                                                <div id="div2" style="padding:5px;float:right;color:#ffffff">
                                                    @if (sessionUserID == user.UserId)
                                                    {
                                                        <div class="dropdown text-end">
                                                            <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Edit</a>
                                                            <div class="dropdown-menu dropdown-menu-end">
                                                                <a asp-controller="Post" asp-action="Update" asp-route-id="@obj.PostId"
                                                           class="dropdown-item mx-2 w-75"> <i class="bi bi-pencil-square"></i> Update</a>

                                                                <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.PostId"
                                                           class="dropdown-item mx-2 w-75"> <i class="bi bi-trash-fill"></i> Delete</a>

                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            @if (obj.UserProfilePicture == null)
                                            {
                                                <img src="https://static.thenounproject.com/png/2518416-200.png" class="rounded-circle" height="40" width="40" asp-append-version="true" /> @obj.UserName
                                            }
                                            else
                                            {
                                                <img src="~/profilePictures/@obj.UserProfilePicture" class="rounded-circle" height="40" width="40" asp-append-version="true" /> @obj.UserName
                                            }
                                            @*<h5>@obj.UserName</h5>*@
                                            <br /> <br />
                                            <small class="text-muted"> @obj.CreatedAt</small>
                                            <br /> <br />
                                            <h6>@obj.Content</h6>

                                            @if (obj.PostImagePath != null)
                                            {
                                                <img src="~/postImages/@obj.PostImagePath" class="col-sm-10 center" asp-append-version="true" width="300" height=auto />
                                            }
                                            @if (obj.PostVideoPath != null)
                                            {
                                                <video width="320" height="240" controls="controls">
                                                    <source src="~/postImages/@obj.PostVideoPath" type="video/mp4">
                                                    Your browser does not support the video tag.
                                                </video>
                                            }

                                            <br />
                                            @{
                                                bool takeAll = false;
                                            }
                                            @await Component.InvokeAsync("CommentViewComponent", new {obj.PostId, takeAll})
                                            <a asp-controller="Post" asp-action="ViewPost" asp-route-id="@obj.PostId"> Click here to see more comments.</a>
                                        </div>
                                    </div>
                                    <br />



                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

</div>

</div>




