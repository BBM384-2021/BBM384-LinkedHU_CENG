@model LinkedHU_CENG.Models.User

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutGuest.cshtml";
    var stateRegister = ViewData["RegisterState"] as Int32?;
}

<form asp-action="Login">
    <div style="margin-top:64px;">
        <h1 align="center">Login</h1>
        <div class="col-md-4" style="width:400px; margin:0 auto;">
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" required/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div align="center" class="form-group" style="" width:400px; margin:0 auto;">
                <input type="submit" class="btn btn-danger" value="Login" />
            </div>
        </div>
    </div>
</form>

<div class="form-group">
    <button class="btn btn-link" type="submit" asp-area="" asp-controller="User" asp-action="ForgetPassword">Forgot Password?</button>                
</div>



<div id="box" class="alert alert-dismissible alert-success" style="visibility:hidden; position:fixed; 
    top: 70px; 
    right: 0px; 
    width: 40%;
    z-index:9999; 
    border-radius:0px">
  <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
  <strong>Well done!</strong> Successfully registered. You have to wait until the admin approves.</a>.
</div>

@{
    if(stateRegister == 1)
    {
        <script>
            setTimeout(()=>{
                const box = document.getElementById("box");

                box.style.visibility = "visible";
            },50);
            setTimeout(()=>{
                const box = document.getElementById("box");

                box.style.visibility = "hidden";
            },2500);
        </script>
    }
}