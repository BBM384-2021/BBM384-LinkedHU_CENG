@{
    var nameSurname = ViewData["NameSurname"] as List<User>;
    var name = ViewData["Name"] as List<User>;
    var surname = ViewData["Surname"] as List<User>;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<List<User>> arrayList = new List<List<User>> { nameSurname, name, surname };
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}



<div class="row " style="margin-top:70px">
    

    <div class="container p-3">

        
                @foreach (var usrList in arrayList)
                {
                    @foreach (var usr in usrList)
                    {
                        <div class="card border p-3 mt-4  custom-shadow1" style="width:50%; height:180px;margin:auto; background:#7b7b7b;">
                            <div  style="width:100%; margin:auto">
                             <div style="float: left; width: 25%;">
                                 @if (usr.ProfilePicturePath == null)
                                {
                                    <img src="https://static.thenounproject.com/png/2518416-200.png" class="rounded-circle" height="100%" width="100%" asp-append-version="true" />
                                }
                                else
                                {
                                    <img src="~/profilePictures/@usr.ProfilePicturePath" class="rounded-circle" height="140px" width="140px" asp-append-version="true" /> 
                                }
                             </div>
                             <div style="float: left; width: 50%;text-align:center;">
                                    <h4> @usr.Name @usr.Surname</h4>
                                    <h5 style="opacity: 0.7;"> @usr.Title</h5>
                                    <h6 style="opacity: 0.4;"> @usr.Location</h6>
                             </div>
                             <div style="float: left; width: 25%; ">
                                <form>
                                    <input asp-controller="User" asp-action="ViewProfile" asp-route-id="@usr.UserId" type="submit" value="View Profile" class="button-view" style="padding:5px;;float:right;color:#453b3b; text-align:center; background-color:#c3bdbd; border-color:#FFFFFF" />
                                </form> 
                             </div>
                            </div>
                                
                                
                        </div>
                    }

                }
           
    </div>
</div>