@model LinkedHU_CENG.Models.Application

@{
    ViewData["Title"] = "Create";
    var advertisement = ViewData["Advertisement"] as Advertisement;
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}

<form asp-controller="Advertisement" asp-action="Create" method="post">
    @Html.HiddenFor(model => advertisement.AdvertisementId)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.UserName)
    <div class="border p-3 mt-4 custom-margin1 custom-shadow1">
        <div class="mb-3 ">
            <h3 class="text-primary">Apply to @advertisement.Title at @advertisement.Company</h3>
        </div>
        <div align="center" class="form-group" style="" width:400px; margin:0 auto;">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Submit Application</button>
        </div>
    </div>
</form>
