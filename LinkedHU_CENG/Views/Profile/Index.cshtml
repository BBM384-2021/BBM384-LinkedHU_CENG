@using LinkedHU_CENG.Models
@{
    ViewData["Title"] = "Index";
    var user = ViewData["User"] as User;
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LinkedHU_CENG</title>
    <link rel="stylesheet" href="~/css/BootstrapProfile.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PostgreSQL.styles.css" asp-append-version="true" />
</head>



<div class="container">
    <div class="main-body">
        <div class="row ">

            <div class="col">
                <div class="card-profile">
                    <div class="card">
                        <div class="d-flex flex-column align-items-center text-center">
                            @if (user.ProfilePicturePath == null)
                            {
                                <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle" width="150">
                            }
                            else
                            {
                                <img src="~/profilePictures/@user.ProfilePicturePath" alt="Admin" class="rounded-circle" width="150">
                            }
                            @*<img src="~/images/@user.ProfilePicturePath"  class="rounded-circle"height="40" width="40" asp-append-version="true" />  *@
                            <div class="mt-3">
                                <h4>@user.Name @user.Surname</h4>
                                @if (user.Title == null)
                                {
                                    <p class="text-secondary mb-1"></p>
                                }
                                else
                                {
                                    <p class="text-secondary mb-1">@user.Title</p>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row gutters-sm">
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                <h6 align="center" ; class="align-items-center mb-3">Personal Information</h6>
                                <div class="card-aboutme col">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Phone Number</h6>
                                            <h6 class="text-secondary h6-custom">@user.PhoneNum</h6>
                                        </li>
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Email Address</h6>
                                            <h6 class="text-secondary h6-custom">@user.Email</h6>
                                        </li>
                                        @if (@user.Location == null)
                                        {
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0">Location</h6>
                                                <h6 class="text-secondary h6-custom">You can add your location information.</h6>
                                            </li>
                                        }
                                        else
                                        {
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0">Location</h6>
                                                <h6 class="text-secondary h6-custom">@user.Location</h6>
                                            </li>
                                        }
                                        <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                            <h6 class="mb-0">Birth Date</h6>
                                            <h6 class="text-secondary h6-custom">@user.BirthDate</h6>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <div class="card h-100">
                            <div class="card-body">
                                @if (@user.About == null)
                                {
                                    <h6 align="center" ; class="align-items-center mb-3">About Me</h6>
                                    <div class="card-aboutme col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0 h6-custom">You can write about your years of experience, industry, or skills. People also talk about their achievements or previous job experiences.</h6>
                                            </li>
                                        </ul>
                                    </div>
                                }
                                else
                                {
                                    <h6 align="center" ; class="align-items-center mb-3">About Me</h6>
                                    <div class="card-aboutme col">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item justify-content-between align-items-center flex-wrap">
                                                <h6 class="mb-0 h6-custom">@user.About</h6>
                                            </li>
                                        </ul>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col mt-3">
                <div class="card mb-3">
                    <div class="card-body">
                        <div style="display:block; width:100%;">

                            @await Component.InvokeAsync("OwnedPostViewComponent")
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

</div>

</div>




