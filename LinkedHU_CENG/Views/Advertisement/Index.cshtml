@model LinkedHU_CENG.Models.Advertisement
@{
    ViewData["Title"] = "Advertisement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:20px;">
    <form asp-action="Index" asp-controller="Advertisement" method="post">
        <div class="main-body">
            <div class="row ">
                <div class="col">
                    <div id="mySidenav" class="sidenav">
                        <a asp-area="" asp-controller="Advertisement" asp-action="Create">Add Advertisement</a>
                        <br>
                        <a asp-area="" asp-controller="Application" asp-action="Index">My Applications</a>
                    </div>
                </div>
                <div class="col-sm-6 mb-3">
                    <div class="card h-100">
                        <div class="card-body">
                            @await Component.InvokeAsync("AdvertisementViewComponent")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>