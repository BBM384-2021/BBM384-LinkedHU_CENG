@model LinkedHU_CENG.Models.Post
@{
    ViewData["Title"] = "Post";
}

<form asp-controller="Post" asp-action="Update" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.UserId)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.UserName)
    @Html.HiddenFor(model => model.PostImagePath)
    @Html.HiddenFor(model => model.PostVideoPath)
    @Html.HiddenFor(model => model.UserProfilePicture)
    <div class="text-center">
        <div class="border p-3 mt-4 custom-margin1 custom-shadow1">
            <div class="mb-3 ">
                <h3 class="text-primary">Update Post</h3>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
                <br /> <br />
                @if (!string.IsNullOrEmpty(Model.PostImagePath))
                {
                    <img src="~/postImages/@Model.PostImagePath" class="col-sm-10" asp-append-version="true" width="naturalWidth" height="naturalHeight" />
                }
                @if (!string.IsNullOrEmpty(Model.PostVideoPath))
                {
                    <video width="320" height="240" controls="controls">
                        <source src="~/postImages/@Model.PostVideoPath" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                }s
                <br /> <br />
                <div class="col-md-1">
                    <div class="form-group">
                        <label asp-for="PostImage" class="control-label"></label>
                        <div class="custom-file">
                            <input asp-for="PostImage" type="file" accept=".jpeg,jpg,.png,.gif,.mp4" />
                        </div>
                        <span asp-validation-for="PostImage" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Update</button>
        </div>
    </div>
</form>

@section scripts{
<script type="text/javascript">

    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
} 