@model LinkedHU_CENG.Models.Post
@{
    ViewData["Title"] = "Post";
    var isUserValid = ViewData["isBanUserValid"] as int?;
}

@if (isUserValid == 1)
{
    <form asp-controller="Post" asp-action="Create" method="post" enctype="multipart/form-data" style="margin-top:80px;">
        <div class="border p-3 mt-4 custom-margin1 custom-shadow1" style="margin-top:64px; background:#E7E7E5; box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;">
            <div class="mb-3 ">
                <h3 class="text-primary">Share Post</h3>
                <div class="form-group">
                    <textarea asp-for="Content" class="form-control" id="exampleTextarea" style="border-style: double;" rows="3"></textarea>
                </div>
                <span asp-validation-for="Content" class="text-danger"></span>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="PostUpload" class="control-label"></label>
                        <div class="form-group">
                            <input asp-for="PostUpload" class="form-control" type="file" accept=".jpeg,jpg,.png,.gif,.mp4,.pdf" id="formFile">
                        </div>
                        <span asp-validation-for="PostUpload" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div style="justify-content-center">
            <button class="btn btn-danger my-2 my-sm-0 mx-auto d-block" style="text-align:center;" type="submit">Share</button></div>
        </div>
    </form>
}

@section scripts{
<script type="text/javascript">

    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}
