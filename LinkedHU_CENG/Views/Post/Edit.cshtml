@model LinkedHU_CENG.Models.Post
@{
    ViewData["Title"] = "Post";
}

<form asp-controller="Post" asp-action= "Edit" method="post">
	@Html.HiddenFor(model => model.PostId)
	<div class="border p-3 mt-4 custom-margin1">
		<div class="mb-3 ">
			<h3 class="text-primary">Edit Post</h3>
			<input asp-for="Content" class="form-control" style="width:1000px" />
			<span asp-validation-for="Content" class="text-danger"></span>
		</div>
		<button type="submit">Edit</button>
	</div>
</form>