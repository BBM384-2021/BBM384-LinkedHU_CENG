@model IEnumerable<LinkedHU_CENG.Models.Advertisement>

@{
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}

<table class="table table-striped" style="width:100%">
       @foreach(var obj in Model.OrderByDescending(a=>a.AdvertisementId))
       {
        @if(sessionUserID == obj.UserId)
        {
            <div class = "card">
                <div class="custom-margin1" style="background-color:#ffffff;padding:25px;box-shadow: inset 2px 2px 2px 0px #ddd;">
                    <div id="wrapperDiv">
                        <div id="div2" style="padding:5px;float:right;color:#ffffff"> 
                                    <div class="dropdown text-end">
                                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Edit</a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a style=" color:rgb(39, 55, 76);"  asp-controller="Advertisement" asp-action="Close" asp-route-id="@obj.AdvertisementId" 
                                                    class="dropdown-item mx-2 w-75"> <i class="bi bi-pencil-square"></i>Close Application</a>
                                                <a style=" color:rgb(39, 55, 76);"  asp-controller="Advertisement" asp-action="Update" asp-route-id="@obj.AdvertisementId" 
                                                    class="dropdown-item mx-2 w-75"> <i class="bi bi-pencil-square"></i>Update</a>
                                                <a style=" color:rgb(39, 55, 76);"  asp-controller="Advertisement" asp-action="Delete" asp-route-id="@obj.AdvertisementId"
                                                    class="dropdown-item mx-2 w-75"> <i class="bi bi-trash-fill"></i>Delete</a>
                                            </div>
                                    </div>
                        </div>
                    </div>

                    <h3>@obj.Title</h3>
                    <h6>@obj.Company</h6>
                    <h6>@obj.Type</h6>
                    <h6>@obj.Location</h6>
                    <small class="text-muted">@obj.UserName @obj.CreatedAt</small>
                    <br> <br/>
                    <h6>@obj.Description</h6>
				    <br> 
                    <div class="d-flex">
                        <input type="button" value="Get Applicant’s Details" onclick="@("window.location.href='" + @Url.Action("GetApplicantsDetails", "Advertisement",  obj) + "'");" />
                    </div>
                </div>
            </div>
        }
       }
</table>