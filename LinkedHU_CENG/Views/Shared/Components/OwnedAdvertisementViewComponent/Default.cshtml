@model IEnumerable<LinkedHU_CENG.Models.Advertisement>

@{
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}

<table class="table table-bordered table-striped" style="width:100%">
       @foreach(var obj in Model.OrderByDescending(a=>a.AdvertisementId))
       {
        @if(sessionUserID == obj.UserId)
        {
            <div class = "card">
                <div class="custom-margin1">
                    <div id="wrapperDiv">
                        <div id="div3" style="padding:5px;float:right;color:#ffffff"> <a href= #><i class="bi bi-chat-right-text"></i></a> 
                        </div>
                        <div id="div2" style="padding:5px;float:right;color:#ffffff"> <a href= #> <i class="bi bi-share"></i></a>
                        </div>
                        <div id="div2" style="padding:5px;float:right;color:#ffffff"> 
                                    <div class="dropdown text-end">
                                        <a class="dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Edit</a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a asp-controller="Advertisement" asp-action="Update" asp-route-id="@obj.AdvertisementId" 
                                                    class="dropdown-item mx-2 w-75"> <i class="bi bi-pencil-square"></i> Update</a>
                                                <a asp-controller="Advertisement" asp-action="Delete" asp-route-id="@obj.AdvertisementId"
                                                    class="dropdown-item mx-2 w-75"> <i class="bi bi-trash-fill"></i> Delete</a>
                                            </div>
                                    </div>
                        </div>
                    </div>

                    <h3>@obj.Title</h3>
                    <h6>@obj.Company</h6>
                    <h6>@obj.Type</h6>
                    <h6>@obj.Location</h6>
                    <small class="text-muted">@obj.UserName @obj.CreatedAt</small>
                    <br> <br/>
                    <h6>@obj.Description</h6>
				    <br> 
                </div>
            </div>
        }
       }
</table>