@{
}
@model List<LinkedHU_CENG.Models.ViewModels.PostCommentViewModel>

@{
    var sessionUserID = ViewData["SessionUserId"] as Int32?;
}



<table class="table table-bordered table-striped" style="width:100%">
        @foreach (var obj in Model.OrderByDescending(a => a.post.PostId))
        {
            <div class="card text-white bg-secondary mb-3" style="margin-top:10px; width:840px; max-height:auto; padding: 10px; box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;">
                    <div class="row" style="margin:0px;">
                        <div class="column" style="width:80%">
                            @if (obj.post.UserProfilePicture == null)
                            {
                                <img src="https://static.thenounproject.com/png/2518416-200.png" class="rounded-circle" height="40" width="40" asp-append-version="true" />
                                <a asp-controller="User" asp-action="ViewProfile" asp-route-id="@obj.post.UserId"
                           class="dropdown-item mx-2 w-75"> @obj.post.UserName</a>
                            }
                            else
                            {
                                <a asp-controller="User" asp-action="ViewProfile" asp-route-id="@obj.post.UserId" class="dropdown-item mx-2 w-75" style="width:75%; padding:0px; margin:0px;">
                                    <img src="~/profilePictures/@obj.post.UserProfilePicture" class="rounded-circle" width="60" asp-append-version="true" />
                                    <span style="margin-left:5px; font-size:26px; text-shadow: 1px 1px black;"> @obj.post.UserName</span>

                                </a>
                            }

                        </div>
                        <div class="column" style="width:20%">
                            <div class="row">
                                <div class="column" style="width:50%;">
                                    <div class="dropdown">
                                        <a class="dropdown-toggle my-2 my-sm-0" href="#" role="button" data-bs-toggle="dropdown"><i class="fa-solid fa-gears"></i>Edit</a>

                                        <div class="dropdown-menu dropdown-menu-end">
                                            <a asp-controller="Post" asp-action="Update" asp-route-id="@obj.post.PostId"
                                           class="dropdown-item mx-2 w-75"> <i class="bi bi-pencil-square"></i> Update</a>

                                            <a asp-controller="Post" asp-action="Delete" asp-route-id="@obj.post.PostId"
                                           class="dropdown-item mx-2 w-75"> <i class="bi bi-trash-fill"></i> Delete</a>

                                        </div>
                                    </div>
                                </div>
                                <div class="column" style="width:50%;">
                                    <button onclick="copyText()" style="border:none; color:#4c9be8; background:none"><i class="fa-solid fa-share-nodes"></i></button>
                                    <script>
                                        function copyText() {
                                            navigator.clipboard.writeText
                                                ("https://localhost:7263/Post/ViewPost/" + @obj.post.PostId );
                                        }
                                    </script>
                                </div>
                            </div>
                        </div>
                    </div>
                    <small class="text-muted"> @obj.post.CreatedAt</small>
                    <div style="margin-top: 10px; margin-bottom:10px; color:#fff">
                        <span>
                            @obj.post.Content
                        </span>
                    </div>

                    <partial name="~/Views/Comment/Create.cshtml" model="@obj" />
                    @* @Html.Partial("~/Views/Comment/Create.cshtml", model = obj)*@
                    @{
                        bool takeAll2 = false;
                    }
                    @await Component.InvokeAsync("CommentViewComponent", new {obj.postId, takeAll2})
                    <a asp-controller="Post" asp-action="ViewPost" asp-route-id="@obj.postId"> Click here to see more comments.</a>
                </div>
        }
    }
</table>